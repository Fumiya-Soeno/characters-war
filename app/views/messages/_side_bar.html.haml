.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__leftbox
        = current_user.name
      .side-bar__header__box__rightbox
        = link_to new_group_path do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
  .side-bar__main
    - current_user.groups.each do |group|
      .side-bar__main__group
        = link_to group_messages_path(group) do
          .side-bar__main__group__groupname
            = group.name
          .side-bar__main__group__lastmessage
            = group.show_last_message